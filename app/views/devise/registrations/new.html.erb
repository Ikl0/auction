<div style="margin: 0 auto;width: 25vw;max-width: 100%;
  text-align: center;" class="card text-center">
  <div class="card-header">
    <h4>Sign up</h4>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.file_field :avatar, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.text_field :name, class: "form-control", placeholder:"Name", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.text_field :surname, class: "form-control", placeholder:"Surname", autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, class: "form-control", placeholder:"mail@example.com", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, class: "form-control", placeholder:"Password ", autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password', autocomplete: 'new-password' %>
      </div>

      <div class="actions">
        <%= f.submit 'Sign up', class: 'btn btn-light' %>
      </div>
    <% end %>
  </div>
  <div class="card-footer text-muted">
    <%= render 'devise/shared/links' %>
  </div>
</div>


