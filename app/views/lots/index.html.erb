<%if @lots.empty? %>
  <%= render 'lots/empty_lots' %>
  <% else %>
  <%= render 'lots/search_form' %>
  <br/>
<table class="table">
  <thead class="table-light">
  <tr>
    <th></th>
    <th>Name</th>
    <th>Initial Price</th>
    <th>Auto Purchase Price</th>
    <th>Tags</th>
    <th>Due to</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
    <% @lots.each do |lot| %>
      <tr>
        <td>
        <%if lot.images.attached? %>
            <%= link_to lot_path(lot) do %>
              <%= image_tag lot.images.first, style: 'height:20%;width:auto;' %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to lot.name, lot, style: "text-decoration: none;" %></td>
        <td><%= lot.initial_price.to_i.to_s + '$' %></td>
        <td><%= lot.auto_purchase_price.to_i.to_s + '$' %></td>
        <td><% lot.tags.map do |tag| %>
            <%= link_to '#' + tag, tag_lots_path(tag: tag), class: 'underline text-blue-600 mr-1.5' %>
          <% end %></td>
        <td><%= lot.end_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>